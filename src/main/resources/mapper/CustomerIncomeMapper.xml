<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linkknown.crm.mapper.CustomerIncomeMapper">
    
    <resultMap type="com.linkknown.crm.bean.dos.CustomerIncome" id="CustomerIncomeResult">
        <result property="shopId"    column="shop_id"    />
        <result property="customerIncomeId"    column="customer_income_id"    />
        <result property="customerId"    column="customer_id"    />
        <result property="introduceCustomerId"    column="introduce_customer_id"    />
        <result property="introduceCustomerRechargeId"    column="introduce_customer_recharge_id"    />
        <result property="incomePoint"    column="income_point"    />
        <result property="incomeAmount"    column="income_amount"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectCustomerIncomeVo">
        select shop_id, customer_income_id, customer_id, introduce_customer_id, introduce_customer_recharge_id,income_point,income_amount, create_by, create_time, update_by, update_time from customer_income
    </sql>

    <select id="selectCustomerIncomeList" parameterType="com.linkknown.crm.bean.dos.CustomerIncome" resultMap="CustomerIncomeResult">
        <include refid="selectCustomerIncomeVo"/>
        <where>  
            <if test="shopId != null "> and shop_id = #{shopId}</if>
            <if test="customerId != null "> and customer_id = #{customerId}</if>
            <if test="introduceCustomerId != null "> and introduce_customer_id = #{introduceCustomerId}</if>
            <if test="introduceCustomerRechargeId != null "> and introduce_customer_recharge_id = #{introduceCustomerRechargeId}</if>
            <if test="incomePoint != null "> and income_point = #{incomePoint}</if>
            <if test="incomeAmount != null "> and income_amount = #{incomeAmount}</if>
        </where>
    </select>
    
    <select id="selectCustomerIncomeById" parameterType="Integer" resultMap="CustomerIncomeResult">
        <include refid="selectCustomerIncomeVo"/>
        where customer_income_id = #{customerIncomeId}
    </select>
        
    <insert id="insertCustomerIncome" parameterType="com.linkknown.crm.bean.dos.CustomerIncome" useGeneratedKeys="true" keyProperty="customerIncomeId">
        insert into customer_income
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="shopId != null ">shop_id,</if>
            <if test="customerId != null ">customer_id,</if>
            <if test="introduceCustomerId != null ">introduce_customer_id,</if>
            <if test="introduceCustomerRechargeId != null ">introduce_customer_recharge_id,</if>
            <if test="incomePoint != null ">income_point,</if>
            <if test="incomeAmount != null ">income_amount,</if>
            <if test="createBy != null  and createBy != ''">create_by,</if>
            <if test="createTime != null ">create_time,</if>
            <if test="updateBy != null  and updateBy != ''">update_by,</if>
            <if test="updateTime != null ">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="shopId != null ">#{shopId},</if>
            <if test="customerId != null ">#{customerId},</if>
            <if test="introduceCustomerId != null ">#{introduceCustomerId},</if>
            <if test="introduceCustomerRechargeId != null ">#{introduceCustomerRechargeId},</if>
            <if test="incomePoint != null ">#{incomePoint},</if>
            <if test="incomeAmount != null ">#{incomeAmount},</if>
            <if test="createBy != null  and createBy != ''">#{createBy},</if>
            <if test="createTime != null ">#{createTime},</if>
            <if test="updateBy != null  and updateBy != ''">#{updateBy},</if>
            <if test="updateTime != null ">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateCustomerIncome" parameterType="com.linkknown.crm.bean.dos.CustomerIncome">
        update customer_income
        <trim prefix="SET" suffixOverrides=",">
            <if test="shopId != null ">shop_id = #{shopId},</if>
            <if test="customerId != null ">customer_id = #{customerId},</if>
            <if test="introduceCustomerId != null ">introduce_customer_id = #{introduceCustomerId},</if>
            <if test="introduceCustomerRechargeId != null ">introduce_customer_recharge_id = #{introduceCustomerRechargeId},</if>
            <if test="incomePoint != null ">income_point = #{incomePoint},</if>
            <if test="incomeAmount != null ">income_amount = #{incomeAmount},</if>
            <if test="createBy != null  and createBy != ''">create_by = #{createBy},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
            <if test="updateBy != null  and updateBy != ''">update_by = #{updateBy},</if>
            <if test="updateTime != null ">update_time = #{updateTime},</if>
        </trim>
        where customer_income_id = #{customerIncomeId}
    </update>

    <delete id="deleteCustomerIncomeById" parameterType="Integer">
        delete from customer_income where customer_income_id = #{customerIncomeId}
    </delete>

    <delete id="deleteCustomerIncomeByIds" parameterType="String">
        delete from customer_income where customer_income_id in 
        <foreach item="customerIncomeId" collection="array" open="(" separator="," close=")">
            #{customerIncomeId}
        </foreach>
    </delete>
    
</mapper>